{
  "description": "Global styles for the FamilySearch.org website.",
  "keywords": [
    "css",
    "stylus",
    "familysearch",
    "styles"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fs-webdev/styles-wc.git"
  },
  "flat": true,
  "homepage": "https://github.com/fs-webdev/styles-wc#readme",
  "name": "styles-wc",
  "version": "4.2.3",
  "directories": {
    "test": "test"
  },
  "author": {
    "name": "FamilySearch",
    "url": "https://familysearch.org/"
  },
  "bugs": {
    "url": "https://github.com/fs-webdev/styles-wc/issues"
  },
  "devDependencies": {
    "@polymer/iron-component-page": "^3.0.0-pre.18",
    "@polymer/iron-demo-helpers": "^3.0.0-pre.18",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "es6-promise": "^4.0.0",
    "fs-common-build-scripts": "github:fs-webdev/fs-common-build-scripts",
    "wct-browser-legacy": "^0.0.1-pre.11"
  },
  "scripts": {
    "postinstall": "bower install",
    "precommit": "node node_modules/fs-common-build-scripts/bin/pre_commit_checks.js && node_modules/fs-common-build-scripts/bin/pre_commit_commands.sh",
    "preinstall": "git config --global url.https://github.com/.insteadOf git://github.com/",
    "pretest": "semistandard --verbose '**/*.html' '**/*.js' --fix | snazzy && stylelint '**/*.html' '**/*.css' --fix",
    "standard": "semistandard --verbose '**/*.html' '**/*.js' | snazzy && stylelint '**/*.html' '**/*.css'",
    "standard-fix": "semistandard --verbose '**/*.html' '**/*.js' --fix | snazzy && stylelint '**/*.html' '**/*.css' --fix",
    "test": "wct --skip-plugin sauce",
    "test-p": "wct --skip-plugin sauce -p"
  },
  "semistandard": {
    "about": "https://github.com/Flet/semistandard#javascript-semi-standard-style",
    "globals": [
      "__actions__",
      "__services__",
      "__state__",
      "after",
      "afterEach",
      "axe",
      "before",
      "beforeEach",
      "customElements",
      "CustomEvent",
      "describe",
      "Event",
      "expect",
      "fixture",
      "FS",
      "FsBehaviors",
      "Headers",
      "HTMLElement",
      "indexedDB",
      "it",
      "location",
      "Polymer",
      "ResettablePropertiesBehavior",
      "sessionStorage",
      "sinon",
      "WCI18n"
    ],
    "ignore": [
      "**/*bower_components*/**",
      "**/*min.*",
      "**/*node_modules*/**",
      "**/*polyfill*",
      "**/demo/**",
      "**/reports/**",
      "**/test/**",
      "**/vendor/**",
      "analysis.json",
      "gulpfile.js"
    ],
    "plugin": "html"
  },
  "stylelint": {
    "about": "https://github.com/stylelint/stylelint/blob/master/docs/user-guide/rules.md#possible-errors",
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "**/bower_components/**.*",
      "**/node_modules/**.*",
      "**/reports/**.*",
      "**/test/**.*"
    ],
    "rules": {
      "indentation": 2,
      "media-feature-colon-space-after": null,
      "selector-type-no-unknown": null,
      "unit-whitelist": [
        "%",
        "deg",
        "em",
        "px",
        "rem",
        "s",
        "vh",
        "vw"
      ]
    }
  },
  "resolutions": {
    "inherits": "2.0.3",
    "samsam": "1.1.3",
    "supports-color": "3.1.2",
    "type-detect": "1.0.0",
    "@webcomponents/webcomponentsjs": "2.0.0-beta.2"
  },
  "main": "fs-styles.js",
  "license": "SEE LICENSE IN LICENSE.txt",
  "dependencies": {
    "@polymer/polymer": "^3.0.0",
    "wc-i18n": "github:fs-webdev/wc-i18n#es-module"
  }
}
